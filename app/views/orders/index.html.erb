<section class="content-header">
  <h1>注文一覧</h1>
</section>

<%= link_to "新規登録", new_order_path(@order) %>
<div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>No</th>
            <th>注文ID</th>
            <th>注文名</th>
            <th>基本情報編集</th>
            
            <th>削除</th>
            <th>追加データコピー</th>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.id %>
          </td>
          <td><%= order.orderid %></td>
          <td><%= link_to order.ordername, order_path(order) %></td>
          <td><%= link_to "編集", edit_order_path(order) %></td>
          
          <td><%= link_to "削除", order, method: :delete, data: {confirm: '削除してもいいですか？'} %></td>
          <td><%= link_to "複製", order_path(order) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div><!-- /.box -->
</section>
