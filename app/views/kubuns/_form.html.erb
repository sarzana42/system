<div class="well">
    <%= form_for(@kubun, html: { class: "form-horizontal" }) do |k| %>
    <fieldset>
      <legend>登録・編集</legend>
        <% if @kubun.errors.present? %>
           <%= alert %>
           <% @kubun.errors.full_messages.each do |full_message| %>
             <%= full_message %>
          <% end %>
        <% end %>
      <div class="form-group">
          <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">顧客区分</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= k.text_field :name, class: 'form-control', placeholder: '' %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
      </div>
      
        <div class="form-group">
          <div class="col col-xs-9 col-xs-offset-3 col-sm-8 col-sm-offset-4 col-md-9 col-md-offset-3">
            <%= k.submit class: "btn btn-success btn-lg" %>
          </div>
        </div>
      
    </fieldset>
    <% end %>
  </form>
</div>