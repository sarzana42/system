<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>商品登録確認ページ</h1>
  <br>
  <p><%= link_to "一覧に戻る", products_path %></p>
  <br>
  （<%= link_to "編集する", edit_product_path %>｜
<%= link_to "削除する", product_path, method: :delete, data: { confirm: "本当によろしいですか？"} %>）

</section>

<section class="content">
  <div class="box">
    <div class="box-body">
      
　    <div class="form-group">
          <label for="id" class="col col-xs-12 col-sm-4 col-md-3 control-label">メーカー名</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= @product.maker.name %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
      </div>
　    <div class="form-group">
          <label for="id" class="col col-xs-12 col-sm-4 col-md-3 control-label">ID</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= @product.id %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
      </div>
      <br>
      <div class="form-group">
          <label for="kubun" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品型番</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= @product.productid %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
      </div>
      <br>
      <div class="form-group">
          <label for="maildm" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品名</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= @product.name %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
      </div>
      <br>
      
        <div class="form-group">
          <label for="tel" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品説明欄</label>
          <div class="col col-xs-12 col-sm-6 col-md-7">
              <%= @product.productinfo %>
          </div>
          <div class="col-xs-offset-0 col-sm-offset-2 col-md-offset-2"></div>
        </div>
        <br>
        <div class="form-group">
          <label for="tel" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品画像</label>
          <div class="col col-xs-12 col-sm-6 col-md-7">
              <% if @product.productpic? %>
　　            <%= image_tag @product.productpic.thumb.url %>
　            <% else %>
　　            <%= image_tag 'noimage.gif' %>
　            <% end %>
          </div>
          <div class="col-xs-offset-0 col-sm-offset-2 col-md-offset-2"></div>
        </div>
        <br>
        
      
        <div class="form-group">
          <label for="remark" class="col col-xs-12 col-sm-4 col-md-3 control-label">備考欄</label>
          <div class="col col-xs-12 col-sm-6 col-md-7">
              <%= @product.remark %>
          </div>
          <div class="col-xs-offset-0 col-sm-offset-2 col-md-offset-2"></div>
        </div>
        <br>
    </div>
  </div>    
</section>
<section class="content-header">
  <h1>商品詳細一覧</h1>
</section>

<section class="content">
  <div class="box">
    <div class="box-header">
      <div class="box-tools">
        <!-- 検索 -->
      
      <!-- 検索end -->
      </div>
    </div><!-- /.box-header -->
<%= link_to "新規登録", new_product_productdetail_path(@product) %>
<div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品型番</th>
            <th>商品名</th>
            <th>編集</th>
            <th>確認</th>
            <th>削除</th>
            <th>複製</th>
          </tr>
        </thead>
        <% @productdetails.each do |productdetail| %>
        <tr>
          <td>
            <%= productdetail.id %>
          </td>
          <td><%= productdetail.colorname %></td>
          <td><%= link_to "編集", edit_productdetail_path(productdetail) %></td>
          <td><%= link_to "確認", productdetail_path(productdetail) %></td>
          <td><%= link_to "削除", productdetail, method: :delete, data: {confirm: '削除してもいいですか？'} %></td>
          <td><%= link_to "複製", productdetail_path(productdetail) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div><!-- /.box -->
</section>


