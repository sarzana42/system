<div class="well">
    <%= form_for(@product, html: { class: "form-horizontal" }) do |f| %>
    <fieldset>
      <legend>登録・編集</legend>
        <% if @product.errors.present? %>
           <%= alert %>
           <% @product.errors.full_messages.each do |full_message| %>
             <%= full_message %>
          <% end %>
        <% end %>

      <div class="form-group">
        <label for="kubun" class="col col-xs-12 col-sm-4 col-md-3 control-label">メーカー名</label>
        <div class="col-xs-12 colcol-xs-10 col-sm-6 col-md-7">
          <div class="input-group">
            <%= f.collection_select :maker, Maker.all, :id, :name, {prompt: true}, {class: "form-control"} %>
          </div>
        </div>
        <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-2"></div>
      </div>
      
      <div class="form-group">
          <label for="groupcus" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品型番</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= f.text_field :productid, class: 'form-control', placeholder: '00085CVT' %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
        <div class="form-group">
          <label for="name" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品名</label>
          <div class="col col-xs-5 col-sm-3 col-md-3">
            <%= f.text_field :name, class: 'form-control', placeholder: 'ヘビーウェイトTシャツ' %>
          </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
      
      <div class="form-group">
        <div class="col col-sm-8 col-sm-offset-4 col-md-9 col-md-offset-3">
          <%= f.text_area :productinfo, class: 'form-control', placeholder: '商品説明欄' %>
              <p class="help-block">住所は2つに分けてご記入ください。</p>
          
        </div>
      </div>
      
          <div class="form-group">
              <label for="piccus" class="col col-xs-12 col-sm-4 col-md-3 control-label">商品画像</label>
              <div class="col col-xs-5 col-sm-3 col-md-3">
                  <%= image_tag @product.productpic.url if @product.productpic? %>
                  <%= f.file_field :productpic %>
              </div>
          <div class="col-xs-offset-2 col-sm-offset-2 col-md-offset-3"></div>
        </div>
        <div class="form-group">
          <label for="remark" class="col col-xs-12 col-sm-4 col-md-3 control-label">備考欄</label>
          <div class="col col-xs-12 col-sm-6 col-md-7">
            <%= f.text_area :remark, class: 'form-control' %>
          </div>
          <div class="col-xs-offset-0 col-sm-offset-2 col-md-offset-2"></div>
        </div>
        <div class="form-group">
          <div class="col col-xs-9 col-xs-offset-3 col-sm-8 col-sm-offset-4 col-md-9 col-md-offset-3">
            <%= f.submit class: "btn btn-success btn-lg" %>
          </div>
        </div>
      
    </fieldset>
    <% end %>
  </form>
</div>